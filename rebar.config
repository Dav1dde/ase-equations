{erl_opts, [debug_info]}.
{deps, [
  {jiffy, "0.14.7"}
]}.

{overrides,
  [{override, jiffy, [
    {plugins, [pc]},
    {artifacts, ["priv/jiffy.so"]},
    {provider_hooks, [
      {post,
        [
          {compile, {pc, compile}},
          {clean, {pc, clean}}
        ]
      }]
    }
  ]}
  ]
}.